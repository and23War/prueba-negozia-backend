{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@*": ["*", "server/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"],
  "filesGlob": ["**/*.ts"]
}
